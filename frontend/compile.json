{
  "$schema": "https://qooxdoo.org/schema/compile-1-0-0.json",
  "targets": [
    {
      "type": "source",
      "outputPath": "compiled/source",
      "bundle": {
        "include": "qx.*"
      },
      "babelOptions": {
        "targets": "Chrome >= 76, Firefox >= 68, edge >= 18"
      }
    },
    {
      "type": "build",
      "outputPath": "compiled/build",
      "babelOptions": {
        "targets": "Chrome >= 76, Firefox >= 68, edge >= 18"
      }
    }
  ],
  "defaultTarget": "source",
  "locales": ["en","de","fr"],
  "environment": {
      "qx.icontheme": "Tango"
  },
