*** output ***

+days_with_grazing_and_yard
  print = DairyCow
  ++units  
    en = days
    de = Tage
    fr = jours
  ++description
    Number of Days whith access to yard and pasture
  ++formula
    # check yard exists?! -> 0
    if( (Val(grazing_days, GrazingInput) + In(yard_days)) > 365 ){
      writeLog({
        en => "The sum of days with access to the exercise yard and of grazing "
              . "days per year for dairy cows is higher than 365!\n",
        de => "Die Summe der Weide- und Laufhoftage für Milchkühe ist grösser als 365!\n",
        fr => "La somme des jours de pâturage et des jours avec accès au parcours extérieur " 
              . "pour les vâches laitières est supérieure à 365 !\n",
               }); 
      return Val(grazing_days, GrazingInput) + In(yard_days) - 365;
    } else {
      return 0;
    }

+c_free_factor_yard
  print = DairyCow
  ++units 
    en = -
  ++description
    Free reduction of the Emission rate for the Yard.
  ++formula
    if ( In(free_correction_factor) // 0 != 0 ) {
      writeLog({
        en => "You have entered an additional emission mitigation measure for a dairy cows exercise yard of " 
              . In(free_correction_factor) . "\%!\n", 
        de => "Sie haben eine zusätzliche emissionsmindernde Massnahme für einen Laufhof der Milchkühe von " 
              . In(free_correction_factor) . "\% eingegeben!\n", 
        fr => "Vous avez introduit une mesure supplémentaire limitant les émissions provenant d'un parcours "
              . "extérieur pour vâches laitières de " . In(free_correction_factor) . "\% !\n"
      });
      return 1 - In(free_correction_factor) / 100;     
    } else {
      return 1;
    } 

+c_floor_properties_exercise_yard
  print = DairyCow
  ++units
    en = -
  ++description
    Correction factor for the emission due to the use of the floor properties in housing systems.
  ++formula
    # check yard exists?! -> default
    given ( In(floor_properties_exercise_yard) ) {
      when 'solid_floor' { 
        1 - Tech(red_floor_properties_solid_floor); 
      }
      when 'unpaved_floor' { 
        1 - Tech(red_floor_properties_unpaved_floor); 
      }
      when 'perforated_floor' { 
        1 - Tech(red_floor_properties_perforated_floor); 
      }
      when 'paddock_or_pasture_used_as_exercise_yard' { 
        1 - Tech(red_floor_properties_paddock_or_pasture_used_as_exercise_yard);
      }
      default {
        1; 
      }
    }

+share_excretion
  print = DairyCow
  ++units
    en = -
  ++description
    Share of excretion on the yard according the stay on yard.
    If the basic feeding is on the yard the share_basicfeeding is assumed. 
    Otherwise the share is selected according to the access.
  ++formula 
    given ( In(exercise_yard) ) {
      when 'available_roughage_is_not_supplied_in_the_exercise_yard' {
        Tech(share_available_roughage_is_not_supplied_in_the_exercise_yard);
      } 
      when 'available_roughage_is_partly_supplied_in_the_exercise_yard' {
        Tech(share_available_roughage_is_partly_supplied_in_the_exercise_yard);
      }
      when 'available_roughage_is_exclusively_supplied_in_the_exercise_yard' {
        Tech(share_available_roughage_is_exclusively_supplied_in_the_exercise_yard);
      }
      when 'not_available' {
        0;
      }
    }

+share_excretion_with_grazing
  print = DairyCow
  ++units  
    en = -
    de = -
    fr = -
  ++description
    Share of excretion on the yard according the stay on yard with parallel acess to Pasture.
    If the basic feeding is on the yard the share_basicfeeding is assumed. 
    Otherwise the share is selected according to the access.
  ++formula
    if( (Out(days_with_grazing_and_yard) > 0) and (Out(share_excretion) > Tech(share_available_roughage_is_partly_supplied_in_the_exercise_yard)) ){
      writeLog({
        en => "The category \"roughage is exclusively supplied in the exercise yard\" is not compatible with the number of grazing days entered!\n",
        de => "Verabreichung von Grundfutter ausschliesslich auf dem Laufhof ist nicht möglich mit den eingegebenen Weidetagen!\n",
        fr => "La distribution de fourrage exclusivement dans le parcours extérieur "
              . "pour les vâches laitières n'est pas possible pendant les jours de pâturage !\n",
      }); 
      return Tech(share_available_roughage_is_partly_supplied_in_the_exercise_yard);
    } else {
      return Out(share_excretion);
    }

+n_into_yard
  print = DairyCow
  ++units
     en = kg N/year
     de = kg N/Jahr
     fr = kg N/an
  ++description
    Annual N excretion on yard for a defined animal category.
  ++formula
    Val(n_excretion, Excretion) * 
    (
      # yard only (100%)
      Out(share_excretion) * 
      (In(yard_days) - Out(days_with_grazing_and_yard)) / 365 +
      # yard and grazing (share yard)
      Out(share_excretion_with_grazing) * 
      Out(days_with_grazing_and_yard) / 365
    );

+tan_into_yard
  print = DairyCow
  ++units
     en = kg N/year
     de = kg N/Jahr
     fr = kg N/an
  ++description
    Annual soluble N excretion on yard for a defined animal category.
  ++formula
    Val(tan_excretion,Excretion) *
    (
      # yard only (100%)
      Out(share_excretion) * 
      (In(yard_days) - Out(days_with_grazing_and_yard)) / 365 +
      # yard and grazing (share yard)
      Out(share_excretion_with_grazing) * 
      Out(days_with_grazing_and_yard) / 365
    );

